ffc script SignPost
{
	void run(int m)
	{
		if ( Link->Y > this->Y + 8 )
		{
			if ( Abs(Link->X-this->X) < 8 )
			{
				if ( Link->PressA || Link->PressB )
				{
					Screen->Message(m);
				}
			}
		}
	}
}

